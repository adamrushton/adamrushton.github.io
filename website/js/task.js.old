function Task(taskName, taskNumber)
{
	var archiveButton   = [];
	var playPauseButton = document.getElementById("displayTaskImage");
	var arcButton       = document.getElementById("displayArchiveImage");
	var images          = ['./assets/Group 3.png', './assets/Group 4.png', './assets/Group 5.png'];
	var imagePosition   = 0;
	this.taskName       = taskName;
	this.archiveButton  = archiveButton[taskNumber]; 
	this.taskState      = 0; // 0 is active, 1 is archived
	this.stopwatch      = new Stopwatch();
	// task[currentTask] = new Task(localStorage.getItem("firstTaskName"), currentTask);

	this.displayTask = function()
	{
		playPauseButton.setAttribute("src", images[imagePosition]);
		arcButton.setAttribute("src", images[1]);
		document.getElementById("displayTaskName").innerHTML = this.taskName;
		console.log(this.taskName);
	};
	
	this.changeImage = function()
	{
		switch (imagePosition)
		{
			case 0: 
				imagePosition = 2;
				break;
			case 2:
				imagePosition = 0;
				break;
		}
		playPauseButton.setAttribute("src", images[imagePosition]);
	};
}
var task    = [];
task[0] = new Task("Test", 0);
task[0].displayTask();
